@using waste_management_parser.Data.ViewModels;
@model RegisterVM

@{
    ViewData["Title"] = "Sign up for a new account";
}

<div style="margin: 0 auto; max-width: 540px;">
    <p>
        <h4>Sign up for a new account</h4>
    </p>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"]</span>
        </div>
    }

    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="FullName" class="mb-2"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EmailAddress" class="mb-2"></label>
            <input asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="mb-2"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmedPassword" class="mb-2"></label>
            <input asp-for="ConfirmedPassword" class="form-control" />
            <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="btn btn-outline-success float-end" type="submit" value="Sign up" />
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>